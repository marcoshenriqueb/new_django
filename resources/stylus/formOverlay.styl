.form-overlay_container
  will-change transform
  overflow auto
  position fixed
  top 0
  left 0
  z-index 500
  width 100%
  height 100%
  display flex
  flex-direction column
  align-items center
  justify-content center
  background-color rgba(0,0,0,.8)

.form-overlay_content
  width 400px
  background-color light_color
  border-radius 4px

.form-overlay_content__header
  width 100%
  padding 2rem 5%
  display flex
  justify-content center
  align-items center

  h2
    margin 0
    color dark_gray_color
    text-transform uppercase

  hr
    width 100px
    border none
    background-color primary_color
    height 1px

.form-overlay_content__body
  display flex
  flex-direction column
  padding 1rem 5% .5rem 5%

  label
    margin-bottom 5px

  input
    margin-bottom 25px

  hr
    width 70%
    margin 30px auto
    background-color primary_color

  span.error
    margin-top 15px
    color red

.fade-form-transition
  transition background-color .3s ease-in-out
  background-color rgba(0,0,0,.8)

.fade-form-enter, .fade-form-leave
  background-color rgba(0,0,0,.0)
